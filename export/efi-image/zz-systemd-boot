#!/bin/sh
set -e
exec </dev/null >&2

ver=$1
eval set -- "$DEB_MAINT_PARAMS"

if [ -z "$1" ] || [ "$1" != "configure" ]; then
	exit 0
fi

entry=/boot/loader/entries/linux-auto.conf

if [ -f ${entry} ] ; then
	sed -i "s#^linux.*#linux   /vmlinuz-${ver}#" ${entry}
	sed -i "s#^initrd.*#initrd  /initrd.img-${ver}#" ${entry}
else
    echo "title   Linux generated by image.sh" > ${entry}
	echo "linux   /vmlinuz-${ver}" >> ${entry}
	echo "initrd  /initrd.img-${ver}" >> ${entry}
fi
